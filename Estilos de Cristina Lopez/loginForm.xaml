                </MenuItem>
                <MenuItem Header="Listas de reproducción" FontSize="14">
                    <MenuItem.Background>
                        <ImageBrush Stretch="None" ImageSource="imgs/mancha_acuarela_5.png"/>
                    </MenuItem.Background>
                </MenuItem>
                <MenuItem Header="Contacto tutoriales" FontSize="14">
                    <MenuItem.Background>
                        <ImageBrush Stretch="None" ImageSource="imgs/mancha_acuarela_5.png"/>
                    </MenuItem.Background>
                </MenuItem>
            </MenuItem>

            <!-- Menú QnA -->
            <MenuItem Header="CreatiQnA" Width="280" StaysOpenOnClick="True" Cursor="Hand" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20,5" Grid.IsSharedSizeScope="True"  FontFamily="Segoe Print">
                <MenuItem.Background>
                    <ImageBrush ImageSource="imgs/mancha_acuarela_1.png" Opacity="0.5" Stretch="None" TileMode="FlipX"/>
                </MenuItem.Background>

                <MenuItem Header="Leer foros" FontSize="14">
                    <MenuItem.Background>
                        <ImageBrush Stretch="None" ImageSource="imgs/mancha_acuarela_5.png"/>
                    </MenuItem.Background>
                </MenuItem>
                <MenuItem Header="Mis preguntas" FontSize="14">
                    <MenuItem.Background>
                        <ImageBrush Stretch="None" ImageSource="imgs/mancha_acuarela_5.png"/>
                    </MenuItem.Background>
                </MenuItem>
                <MenuItem Header="Mis contribuciones" FontSize="14">
                    <MenuItem.Background>
                        <ImageBrush Stretch="None" ImageSource="imgs/mancha_acuarela_5.png"/>
                    </MenuItem.Background>
                </MenuItem>
            </MenuItem>

        </Menu>

        <!-- Contenido de la página -->
        <StackPanel DockPanel.Dock="Top" ScrollViewer.VerticalScrollBarVisibility="Visible" AllowDrop="True" Height="490"  Width="1394" Background="White" ClipToBounds="True">
            <!-- ClipToBounds="True"-->

    <Grid ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Visible" Background="White" Height="490" Width="1394">
        <!-- Fondo pagina-->
        <Image Source="imgs/deco_fondo_pintura_2.png" MaxWidth="1400" Stretch="UniformToFill" StretchDirection="Both"/>
        <StackPanel Height="490" Width="1394" Orientation="Horizontal">

            <!-- credenciales, mitad izquierda-->
            <StackPanel Height="490" Width="800">

                <!-- caja rosa de inicio sesión -->
                <Grid Width="800" Margin="0,40,0,20" ClipToBounds="True" Height="270">
                    <!-- imagen fondo caja -->
                    <StackPanel Width="800" HorizontalAlignment="Center">
                        <Image Source="imgs/mancha_pintura_13_salmon.png" MaxWidth="800"  Opacity="0.8" Stretch="UniformToFill" Height="165" Width="800"/>
                        <Image Source="imgs/mancha_pintura_13_salmon.png" MaxWidth="800"  Opacity="0.8" Stretch="UniformToFill" Height="165" Width="800"/>
                    </StackPanel>

                    <!-- contenido caja -->
                    <StackPanel Width="500">
                        <!-- titulo form -->
                        <StackPanel>
                            <Label Content="Iniciar sesión" FontFamily="Segoe UI Black" FontWeight="Bold" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" Padding="5,10,5,5" />
                            <Canvas Height="5" Background="White" Margin="0,0,0,10"/>
                        </StackPanel>

                        <!-- input contraseña-->
                        <StackPanel>
                            <Label Content="Nombre de usuario o email:" FontFamily="Segoe UI" FontWeight="Medium"  FontSize="16" VerticalAlignment="Center" HorizontalAlignment="left" Foreground="black" Padding="5"/>
                            <Canvas Height="30">
                                <TextBox Height="30" Text="Escribir aquí..." FontStyle="Italic" TextAlignment="Justify" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" TextWrapping="WrapWithOverflow" BorderBrush="{x:Null}" Cursor="IBeam" Background="{x:Null}" Panel.ZIndex="1" Canvas.Left="10" Width="480"/>
                                <Rectangle Height="30" Width="500" RadiusX="10" Fill="White" RadiusY="10" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                            </Canvas>
                        </StackPanel>

                        <!-- input contrseña -->
                        <StackPanel>
                            <Label Content="Contraseña de CreatiNation:" FontFamily="Segoe UI" FontWeight="Medium"  FontSize="16" VerticalAlignment="Center" HorizontalAlignment="left" Foreground="black" Padding="5"/>
                            <Canvas Height="30">
                                <TextBox Height="30" Text="Escribir aquí..." FontStyle="Italic" TextAlignment="Justify" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" TextWrapping="WrapWithOverflow" BorderBrush="{x:Null}" Cursor="IBeam" Background="{x:Null}" Panel.ZIndex="1" Canvas.Left="10" Width="480"/>
                                <Rectangle Height="30" Width="500" RadiusX="10" Fill="White" RadiusY="10" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                            </Canvas>
                        </StackPanel>

                        <!-- botón Entrar -->
                        <StackPanel Margin="0,15">
                            <Button Width="300" Height="40" Background="{x:Null}" BorderBrush="{x:Null}" Click="boton_home">
                                <Canvas Height="60" Width="300">
                                    <Label Content="Entrar" FontFamily="Segoe UI" FontWeight="Medium"  FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" Padding="5" Panel.ZIndex="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="30" Width="300"/>
                                    <Image Source="imgs/letrero_pintura_4_salmon.png"  Width="300" Stretch="Fill" StretchDirection="Both" Height="40"/>
                                </Canvas>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- ir a registrarse -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20" >
                    <Label Content="¿No tienes cuenta?" FontFamily="Segoe UI" FontWeight="Bold"  FontSize="20" VerticalAlignment="Center" HorizontalAlignment="left" Foreground="black" Padding="5"/>
                    <!-- botón registrarme -->
                    <StackPanel>
                        <Button Width="300" Height="40" Background="{x:Null}" BorderBrush="{x:Null}" Margin="30,0,0,0" Click="boton_signUp">
                            <Canvas Height="60" Width="300">
                                <Label Content="Registrarme" FontFamily="Segoe UI"   FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" Padding="5" Panel.ZIndex="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="40" Width="300"/>
                                <Rectangle Height="40" Width="300" RadiusX="10" RadiusY="10" VerticalAlignment="Top" HorizontalAlignment="Left">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FF006C0E" Offset="0"/>
                                            <GradientStop Color="#FF008E11" Offset="1"/>
                                            <GradientStop Color="#FF63D170" Offset="0.514"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Canvas>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- separador -->
                <Canvas Height="4" Background="#FFA2A2A2" Margin="0,0,0,10" Width="400"/>

                <!-- login as guest -->
                <Button Width="250" Height="40" Background="{x:Null}" BorderBrush="{x:Null}" Margin="30,0,0,0" Click="boton_home">
                    <Label Content="Continuar como invitado" FontFamily="Segoe UI" FontWeight="Medium"  FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FF909090" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="250" FontStyle="Italic"/>
                </Button>
            </StackPanel>

            <!-- imagen logotipo, mitad derecha-->
            <Canvas Height="490" Width="600">
                <Button Background="{x:Null}" BorderBrush="{x:Null}" Canvas.Top="125" Click="boton_home">
                    <Image Source="imgs/logo_letras_provisional-removebg-preview.png" MaxWidth="590" Stretch="UniformToFill" />
                </Button>
            </Canvas>
        </StackPanel>


    </Grid>
        </StackPanel>

        <!-- Footer Simple (parte inferior fijo)-->
        <StackPanel DockPanel.Dock="Bottom" Height="85" Orientation="Horizontal">
            <StackPanel.Background>
                <ImageBrush ImageSource="imgs/mancha_acuarela_6.png" Stretch="None" Opacity="0.7">
                    <ImageBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleX="6" ScaleY="0.95"/>
                            <SkewTransform CenterY="0.5" CenterX="0.5"/>
                            <RotateTransform CenterY="0.5" CenterX="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </ImageBrush.RelativeTransform>
                </ImageBrush>
            </StackPanel.Background>
            <!-- Menú REDES SOCIALES-->
            <StackPanel Height="40" Orientation="Horizontal" Margin="20,0,0,0">
                <Image Source="imgs/icon_twitter.png" Stretch="Uniform" VerticalAlignment="Center" Height="40" Margin="10,0,5,0"/>
                <Label Content="Twitter: @creatination" FontStretch="ExtraCondensed" FontSize="20" VerticalAlignment="Center"  FontFamily="Segoe Print"/>
            </StackPanel>

            <StackPanel Height="40" Orientation="Horizontal" Margin="20,0,0,0">
                <Image Source="imgs/icon_instagram.png" VerticalAlignment="Center" Width="45" Margin="10,0,5,0" Stretch="UniformToFill"/>
                <Label Content="Instagram: @creatination" FontStretch="ExtraCondensed" FontSize="20" VerticalAlignment="Center"  FontFamily="Segoe Print"/>
            </StackPanel>

            <StackPanel Height="40" Orientation="Horizontal" Margin="20,0,0,0">
                <Image Source="imgs/icon_youtube.png" VerticalAlignment="Center" Width="45" Margin="10,0,5,0" Stretch="UniformToFill"/>
                <Label Content="Youtube: @creatination" FontStretch="ExtraCondensed" FontSize="20" VerticalAlignment="Center"  FontFamily="Segoe Print"/>
            </StackPanel>

            <StackPanel Height="60" Orientation="Horizontal" Margin="20,0,0,0" Width="364">
                <Image Source="imgs/icon_map_pin.png" VerticalAlignment="Top" Width="74" Margin="10,0,5,0" Height="60"/>
                <TextBlock Text="Calle del Conde de Peñalver, 16, 28006 Madrid, España." FontSize="14" FontFamily="Segoe Print" TextWrapping="WrapWithOverflow" Width="276" VerticalAlignment="Center" TextAlignment="Justify" Height="59"/>
            </StackPanel>

        </StackPanel>

    </DockPanel>
</Window>
